{% extends "layouts/private.twig" %}

{% block title %}Home
{% endblock %}

{% block style %}{% endblock %}

{% block content %}
	<!-- products -->
	<div class="product-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col">
					<br>
					{# <div class="product-filters">
															                        <ul>
															                            <li class="active" data-filter="*">Todos</li>
															                            {% for u in categorias %}
