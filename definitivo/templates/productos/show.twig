								<span>unidades restantes</span>
							</p>
							<div class="single-product-form">
							<a href="{{ URL }}?controller=productos&action=index" class="text-decoration-none"> Volver</a>
						</div>
						</div>
					</div>						
					</div>
				</div>
			</div>
		</div>
	</div>
	
	<!-- end single product -->

	<!-- Modal -->
<div class="modal fade" id="Modal">
  <div class="modal-dialog modal-dialog-centered">      
      <div class="modal-content">
        <img style="width: 500px" src="{{ producto.imagen }}">
      </div>
    </div>
  </div>
</div>
{% endblock %}