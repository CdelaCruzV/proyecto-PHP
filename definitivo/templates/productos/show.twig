{% extends "layouts/admin.twig" %}

{% block title %} PRODUCTOS | SHOW {% endblock %}

{% block content %} 
<br>
    <!-- single product -->
	<div class="single-product mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col text-center {{ producto.id }}" style="align-items: center;">
						<div class="single-product-item">
							<div class="product-image">
								<a href="#" data-bs-toggle="modal" data-bs-target="#Modal"><img style="width: 250px" src="{{ producto.imagen }}" alt=""></a>
							</div>
							<h3>{{ producto.nombre }}</h3>
							<p>{{ producto.descripcion}}</p>
							<p class="product-price">
								<span>Precio por Unidad</span>
								{{ producto.precio }}
